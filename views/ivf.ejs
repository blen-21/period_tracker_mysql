        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid var(--primary-lighter);
        }

        th {
            background-color: var(--primary-lighter);
            color: var(--secondary);
            font-weight: 600;
        }

        tr:nth-child(even) {
            background-color: var(--light);
