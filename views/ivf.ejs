        footer {
            text-align: center;
            padding: 30px;
            margin-top: 50px;
            color: var(--secondary);
            font-size: 0.9rem;
            border-top: 1px solid var(--primary-lighter);
        }

        .heart {
            color: var(--primary);
        }

        .ivf-details {
            background-color: var(--primary-lighter);
            padding: 15px;
            border-radius: 10px;
            margin-top: 15px;
