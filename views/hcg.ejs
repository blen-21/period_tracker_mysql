    <script>
        // Set default dates
        const today = new Date();
        const firstDate = new Date();
        firstDate.setDate(today.getDate() - 4);
        
        const secondDate = new Date();
        secondDate.setDate(today.getDate() - 2);
        
        document.getElementById('first-hcg-date').valueAsDate = firstDate;
        document.getElementById('second-hcg-date').valueAsDate = secondDate;
        
        // Form submission
        document.getElementById('hcg-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get form values
            const firstHcg = parseFloat(document.getElementById('first-hcg').value);
            const firstDate = new Date(document.getElementById('first-hcg-date').value);
            const secondHcg = parseFloat(document.getElementById('second-hcg').value);
            const secondDate = new Date(document.getElementById('second-hcg-date').value);
            
            // Validate dates
            if (secondDate <= firstDate) {
                alert("The second test date must be after the first test date.");
                return;
            }
            
            // Calculate time difference in hours
            const timeDiff = Math.abs(secondDate - firstDate);
            const hoursDiff = timeDiff / (1000 * 60 * 60);
            
            // Calculate doubling time
            const doublingTime = (hoursDiff * Math.log(2)) / Math.log(secondHcg / firstHcg);
            
            // Calculate percentage increase
            const percentageIncrease = ((secondHcg - firstHcg) / firstHcg) * 100;
            
            // Determine status
            let status, statusColor;
            if (doublingTime <= 48) {
                status = "Fast";
                statusColor = "#28a745";
            } else if (doublingTime <= 72) {
                status = "Normal";
                statusColor = "#007bff";
            } else if (doublingTime <= 96) {
                status = "Slow";
                statusColor = "#ffc107";
            } else {
                status = "Very Slow";
                statusColor = "#dc3545";
            }
            
            // Format dates for display
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const shortOptions = { month: 'short', day: 'numeric' };
            
            // Display results
            document.getElementById('doubling-time').textContent = Math.round(doublingTime) + "h";
            document.getElementById('hcg-increase').textContent = Math.round(percentageIncrease) + "%";
            document.getElementById('hcg-status').textContent = status;
            document.getElementById('hcg-status').style.color = statusColor;
            
            document.getElementById('first-test-date').textContent = firstDate.toLocaleDateString('en-US', options);
            document.getElementById('first-test-value').textContent = firstHcg;
            
            document.getElementById('second-test-date').textContent = secondDate.toLocaleDateString('en-US', options);
            document.getElementById('second-test-value').textContent = secondHcg;
            
            const daysBetween = Math.round(hoursDiff / 24);
            document.getElementById('time-between-tests').textContent = daysBetween;
            
            // Show results
            document.getElementById('result').style.display = 'block';
            
            // Scroll to results
            document.getElementById('result').scrollIntoView({ behavior: 'smooth' });
        });
    </script>
