    <script>
        // Set default dates
        const today = new Date();
        const defaultLmpDate = new Date();
        defaultLmpDate.setDate(today.getDate() - 56); // 8 weeks ago
        
        document.getElementById('lmp-date').valueAsDate = defaultLmpDate;
        document.getElementById('conception-date').valueAsDate = new Date(today.getDate() - 42); // 6 weeks ago
        document.getElementById('ivf-date').valueAsDate = new Date(today.getDate() - 42); // 6 weeks ago
        document.getElementById('ultrasound-date').valueAsDate = new Date(today.getDate() - 14); // 2 weeks ago
        
        // Method selection
        const methodButtons = document.querySelectorAll('.method-btn');
        const formGroups = document.querySelectorAll('.form-group');
        
        methodButtons.forEach(button => {
            button.addEventListener('click', function() {
                methodButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                const method = this.getAttribute('data-method');
                
                // Hide all form groups
                formGroups.forEach(group => group.classList.remove('active'));
                
                // Show selected method group
                document.getElementById(`${method}-group`).classList.add('active');
                
                // Special handling for cycle length in LMP method
                if (method === 'lmp') {
                    document.getElementById('cycle-length-group').style.display = 'block';
                } else {
                    document.getElementById('cycle-length-group').style.display = 'none';
                }
            });
        });
        
        // Form submission
        document.getElementById('due-date-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const activeMethod = document.querySelector('.method-btn.active').getAttribute('data-method');
            let dueDate;
            let conceptionDate;
            
            // Calculate based on selected method
            switch(activeMethod) {
                case 'lmp':
                    const lmpDate = new Date(document.getElementById('lmp-date').value);
                    const cycleLength = parseInt(document.getElementById('cycle-length').value) || 28;
                    
                    // Validate cycle length
                    if (cycleLength < 21 || cycleLength > 35) {
                        alert("Please enter a cycle length between 21 and 35 days.");
                        return;
                    }
                    
                    // Adjust for cycle length (standard calculation assumes 28-day cycle)
                    const cycleAdjustment = cycleLength - 28;
                    
                    // Due date = LMP + 280 days + cycle adjustment
                    dueDate = new Date(lmpDate);
                    dueDate.setDate(lmpDate.getDate() + 280 + cycleAdjustment);
                    
                    // Conception date = LMP + (cycle length - 14)
                    conceptionDate = new Date(lmpDate);
                    conceptionDate.setDate(lmpDate.getDate() + (cycleLength - 14));
                    break;
                    
                case 'conception':
                    conceptionDate = new Date(document.getElementById('conception-date').value);
                    // Due date = conception + 266 days
                    dueDate = new Date(conceptionDate);
                    dueDate.setDate(conceptionDate.getDate() + 266);
                    break;
                    
                case 'ivf':
                    const ivfDate = new Date(document.getElementById('ivf-date').value);
                    const ivfType = document.getElementById('ivf-type').value;
                    
                    if (ivfType === '3day') {
                        // 3-day transfer: due date = transfer date + 263 days
                        dueDate = new Date(ivfDate);
                        dueDate.setDate(ivfDate.getDate() + 263);
                        conceptionDate = new Date(ivfDate);
                        conceptionDate.setDate(ivfDate.getDate() - 3); // Approximate conception
                    } else {
                        // 5-day transfer: due date = transfer date + 261 days
                        dueDate = new Date(ivfDate);
                        dueDate.setDate(ivfDate.getDate() + 261);
                        conceptionDate = new Date(ivfDate);
                        conceptionDate.setDate(ivfDate.getDate() - 5); // Approximate conception
                    }
                    break;
                    
                case 'ultrasound':
                    const ultrasoundDate = new Date(document.getElementById('ultrasound-date').value);
                    const ultrasoundWeeks = parseInt(document.getElementById('ultrasound-weeks').value) || 0;
                    const ultrasoundDays = parseInt(document.getElementById('ultrasound-days').value) || 0;
                    const totalUltrasoundDays = (ultrasoundWeeks * 7) + ultrasoundDays;
                    
                    // Due date = ultrasound date + (280 - totalUltrasoundDays)
                    dueDate = new Date(ultrasoundDate);
                    dueDate.setDate(ultrasoundDate.getDate() + (280 - totalUltrasoundDays));
                    
                    // Approximate conception
                    conceptionDate = new Date(ultrasoundDate);
                    conceptionDate.setDate(ultrasoundDate.getDate() - totalUltrasoundDays + 14);
                    break;
            }
            
            // Calculate pregnancy progress
            const today = new Date();
            const daysSinceConception = Math.floor((today - conceptionDate) / (1000 * 60 * 60 * 24));
            const weeksPregnant = Math.floor(daysSinceConception / 7);
            const daysPregnant = daysSinceConception % 7;
            
            // Calculate days to go
            const daysToGo = Math.floor((dueDate - today) / (1000 * 60 * 60 * 24));
            
            // Determine trimester
            let trimester, trimesterProgress;
            if (weeksPregnant < 14) {
                trimester = "First";
                trimesterProgress = `Week ${weeksPregnant + 1} of 13`;
            } else if (weeksPregnant < 28) {
                trimester = "Second";
                trimesterProgress = `Week ${weeksPregnant + 1} of 27`;
            } else {
                trimester = "Third";
                trimesterProgress = `Week ${weeksPregnant + 1} of 40`;
            }
            
            // Calculate trimester dates
            const firstTrimesterStart = new Date(conceptionDate);
            firstTrimesterStart.setDate(conceptionDate.getDate() - 14); // LMP date
            
            const firstTrimesterEnd = new Date(firstTrimesterStart);
            firstTrimesterEnd.setDate(firstTrimesterStart.getDate() + 91); // 13 weeks
            
            const secondTrimesterEnd = new Date(firstTrimesterEnd);
